{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "client: msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
            "args": [
                "dev"
            ]
        }
    ],
    "compounds": [
        {
            "name": "G-Analytics: nuxt",
            "configurations": [
                "server: nuxt",
                "client: msedge"
            ]
        }
    ]
}
